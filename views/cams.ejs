<!doctype html>
<html ng-app="cam-viewer" >
<head>
    <% include ./partials/header %>
    <script>var clientID = '<%= clientID %>'</script>
    <script type="text/javascript" src="/static/js/socket.io-1.3.5.js"></script>
    <script type="text/javascript" src="/static/bower_components/angular/angular.min.js"></script>    
    <script type="text/javascript" src="/static/bower_components/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="/static/js/camViewer.js"></script>
    <script type="text/javascript" src="/static/js/swfobject.js"></script>

</head>
<body>
<div class="container">
    <div class="page-header text-center">
        <h1><span class="fa fa-users"></span> <%= tagline %></h1>
        <a href="./logout" class="btn btn-default btn-sm">Logout</a>
        <a href="./profile" class="btn btn-default btn-sm">My profile</a>
        <a href="./cams" class="btn btn-default btn-sm">My cams</a>       

    </div>

    <div class="row" ng-controller="all-cams" >
        <div class="col-sm-8" >
        <!-- LOCAL INFORMATION -->
        <% camFeeds.forEach(function(cam) { %>
        <% include ./partials/cam %><% }); %>
        </div>
        <div class="col-sm-4" ng-controller="cam-viewer" >
            <div id="player">Some player here</div>
        </div>
    </div>

</div>
</body>
</html>